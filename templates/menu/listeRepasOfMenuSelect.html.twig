<!-- Content -->
    <div class="container-fluid py-4">
      <div class="row">
        {% for a in listeOfRepas %}
        <div class="col-md-4 col-sm-6 mb-4">
          <div class="card h-100 shadow-sm">
            <!-- Image du repas -->
            <img 
              src="{{ asset(a.image ? 'imag/' ~ a.image : 'default-image.jpg') }}" 
              class="card-img-top img-fluid" 
              alt="{{ a.nomRepat }}" 
              style="max-height: 200px; object-fit: cover;">

            <div class="card-body text-center">
              <!-- Nom du repas -->
              <h5 class="card-title font-weight-bold">{{ a.nomRepat }}</h5>

              <!-- Description -->
              <p class="card-text">
                {{ a.description ? a.description : 'Aucune description disponible.' }}
              </p>

              <!-- Disponibilité -->
              <p class="card-text text-{{ a.estDisponible ? 'success' : 'danger' }}">
                {{ a.estDisponible ? 'Disponible' : 'Indisponible' }}
              </p>

              <!-- Prix -->
              <p class="card-text">
                <span class="badge bg-primary">{{ a.prixRepas }} USD</span>
              </p>

              
            </div>
          </div>
        </div>
        {% endfor %}
      </div>
    </div>
    <!-- End Content -->



