<script>
    function validatePrixRepas(input) {
        const alertElement = document.getElementById('prixRepasAlert');
        const value        = parseFloat(input.value);
        
            // Vérifier si la valeur est un nombre et non négative
        if (!isNaN(value) && value < 0) {
            alertElement.classList.remove('d-none');  // Affiche l'alerte
        } else {
            alertElement.classList.add('d-none');  // Cache l'alerte
        }
    }
